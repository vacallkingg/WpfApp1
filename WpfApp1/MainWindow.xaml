        <TextBox HorizontalAlignment="Left" Margin="10,29,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Height="333" Name="TextBoxReadJson" IsReadOnly="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True"/>
        <Border BorderThickness="1"
          BorderBrush="#FF000000" Margin="302,52,42,84">
            <Canvas Name="canvas" Margin="0,0,0,-1"  />
        </Border>

    </Grid>
</Window>
